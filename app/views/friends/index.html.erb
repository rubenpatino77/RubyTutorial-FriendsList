
<% if user_signed_in? %>

  <h1>Friends List</h1>



  <!-- ANOTHER WAY TO DISPLAY FRIENDS BUT DOES NOT USE A 'TABLE' TAG FOR BOOTSRAP TABLE LAYOUT

  <div id="friends" class="table">
    <% @friends.each do |friend| %>
      <%= render friend %>
      <p>
        <%= link_to "Show this friend", friend %>
      </p>
    <% end %>
  </div>

  <%= link_to "New friend", new_friend_path %>
  -->




  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <td>
              <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
            </td>
            
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <td><%= link_to "Show this friend", friend %></td>
          </tr>
          <% end %>
      <% end %>
    </tbody>
  </table>

  <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
<% else %>
  <h2><%= @home_page_statement %></h2>

<% end %>



